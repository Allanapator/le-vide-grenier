<div class="background-cart">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="flex-section section">
                    <h2 class="header-cart"> Récapitulatif de la commande</h2>
                    <%=link_to orders_path, class:"button-return-shop mr-3" do %>
                        <p class="mb-0 ">Retour aux commandes <i class="fas fa-arrow-right ml-2"></i></p>
                    <% end %>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-10 col-12 mx-auto">
                <div class="card-product-cart d-flex mb-5 mt-5 mx-auto">
                    <div class="info-in-my-order">

                        <div class="d-flex-info-banner-order section p-0">
                            <p class="">Commande effectué le <%= @order.created_at.strftime("%d %B %Y")%> <span class="badge badge-primary ml-3"><%= @order.state %></span></p>
                            <div class="d-flex-columnn">
                                <p class="mb-1 hide">Total</p>
                                <p class="gold mb-1"><%= @order.amount %> €</p>
                            </div>
                        </div>

                        <% @order.order_products.each do |order_product| %>
                            <div class="card-product-cart d-flex">
                                <% if order_product.product.photo.attachment.nil? %>
                                    <img src="https://media.artsper.com/artwork/227887_1_grid@2x.jpg?MjIyOTI2NDkxNjAxMTE5MDEx" alt="" class="image-cart">
                                <% else%>
                                    <%= cl_image_tag order_product.product.photo.key, class: "image-order", crop: :fill %>
                                <% end %>
                                <div class="info-in-my-cart">
                                    <div class="info-product-in-cart">
                                        <h5 class="title-product-cart"><%= order_product.product.name %></h5>
                                    </div>
                                    <div class="ml-2 div-price-cart">
                                        <p class="cart-price-product"><%= humanized_money(order_product.product.price) %> €</p>
                                    </div>
                                </div>
                            </div>
                        <% end %>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
