<div class="background-cart">
    <div class="container">
        <h1 class="text-center pt-5 section"> Récapitulatif de la commande</h1>
        <div class="mt-5 d-flex justify-content-center">
            <div class="mb-5">
                <% @order.order_products.each do |order_product| %>
                    <div class="card-product-cart d-flex mb-3">
                        <div class="info-in-my-order">

                            <div class=" d-flex section justify-content-between p-0">
                                <p class="">Commande effectué le <%= @order.created_at.strftime("%d %B %Y")%></p>
                                <div class="">
                                    <p class="mb-1">Total</p>
                                    <% sum = 0 %>
                                    <% sum += order_product.product.price_cents %>
                                    <p class="gold mb-1"><%= sum %>€</p>
                                </div>
                            </div>

                            <div class="d-flex justify-content-between ">
                                <ul class="list pl-0">
                                    <li>
                                        <div class="d-flex align-items-center justify-content-between">
                                            <img class="image-order" src="https://cdn1.sklum.com/fr/774532/pack-de-2-chaises-en-velours-glamm.jpg" alt="">
                                            <h5 class="title-product-cart order-product-title mb-0"><%= order_product.product.name %></h5>
                                            <p class="cart-price-product mb-0"><%= order_product.product.price_cents %>€</p>
                                        </div>
                                    </li>
                                </ul>
                                <div class="mt-3">
                                    <p class="mb-2"><button class="button-order">Suivre votre colis</button></p>
                                    <p class="mb-2"><button class="button-order">Retourner un article</button></p>
                                    <p class="mb-2"><button class="button-order">Évaluer un vendeur</button></p>
                                    <p class="mb-2"><button class="button-order">Évaluer une oeuvre</button></p>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
