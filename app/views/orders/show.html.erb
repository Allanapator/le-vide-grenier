<div class="background-cart">
    <div class="container">
        <div class="d-flex justify-content-between align-items-end section">
            <h2 class="mb-0 pt-5 ml-3 d-flex align-items-center"> Récapitulatif de la commande</h2>
            <%=link_to orders_path, class:"button-return-shop mr-3" do %>
                <p class="mb-0 ">Retour aux commandes <i class="fas fa-arrow-right ml-2"></i></p>
            <% end %>
        </div>
        <div class="mt-5 d-flex justify-content-center">
            <div class="mb-5">

                <div class="card-product-cart d-flex mb-3">
                    <div class="info-in-my-order">
                        <div class=" d-flex section justify-content-between align-items-end p-0">
                            <p class="">Commande effectué le <%= @order.created_at.strftime("%d %B %Y")%> <span class="badge badge-primary ml-3"><%= @order.state %></span></p>
                            <div class="">
                                <p class="mb-1">Total</p>
                                <p class="gold mb-1"><%= @order.amount %> €</p>
                                
                            </div>
                        </div>

                        <% @order.order_products.each do |order_product| %>
                            <div class="d-flex justify-content-between ">
                                <ul class="list pl-0">
                                    <li>
                                        <div class="d-flex align-items-center justify-content-between">
                                            <% if order_product.product.photo.attachment.nil? %>
                                                <img class="image-order" src="https://cdn1.sklum.com/fr/774532/pack-de-2-chaises-en-velours-glamm.jpg" alt="">
                                            <% else %>
                                                <%= cl_image_tag order_product.product.photo.key, class: "image-order", crop: :fill %>
                                            <% end %>
                                            
                                            <h5 class="title-product-cart order-product-title mb-0"><%= order_product.product.name %></h5>
                                            <p class="cart-price-product mb-0"><%= humanized_money(order_product.product.price) %> €</p>
                                        </div>
                                    </li>
                                </ul>
                                <div class="mt-3">
                                    <p class="mb-2"><button class="button-order">Suivre votre colis</button></p>
                                    <p class="mb-2"><button class="button-order">Retourner un article</button></p>
                                    <p class="mb-2"><button class="button-order">Évaluer un vendeur</button></p>
                                    <p class="mb-2"><button class="button-order">Évaluer une oeuvre</button></p>
                                </div>
                            </div>    
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
