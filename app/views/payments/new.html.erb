<div class="container back-height">
  <div class="row py-4">
    <div class="col">
      <h1 class="text-center">Résumé de la commande</h1>
      <div class="mt-4">
        <p class="mt-3">Achat de <% @order.order_products.each do |order_product| %> 
          <%= order_product.product.name  %>
          pour <strong><%= humanized_money order_product.product.price %>€</strong>
        </p>
        <% end %>
        <h6> Total : <%= @order.amount %> €</h6>
      </div>
      <div class="d-flex justify-content-center mt-5">
        <button id="pay" class="button-cart button-pay">Payer</button>
      </div>
      <script src="https://js.stripe.com/v3/"></script>
      <script>
        const paymentButton = document.getElementById('pay');
        paymentButton.addEventListener('click', () => {
          const stripe = Stripe('<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>');
          stripe.redirectToCheckout({
            sessionId: '<%= @order.checkout_session_id %>'
          });
        });
      </script>
    </div>
  </div>
</div>