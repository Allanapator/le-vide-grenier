<div class="container mb-5">
    <div class="d-flex justify-content-between align-items-end section">
        <h2 class="ml-3 d-flex align-items-center mb-0 pt-5">Découvrez nos oeuvres</h2>
        <% if Product.all.count > 0 %>
            <h4 class="mr-3 mb-0"> <span class="gold"><%= Product.all.count %></span> oeuvres de disponible</h4>
        <% else %>
            <h4 class="mb-0 mr-3"> <span class="gold"><%= Product.all.count %></span> oeuvre de disponible</h4>
        <% end %>
    </div>
    <div class="row d-flex justify-content-around">
        <% count = 0 %>
        <% @products.each do |product|%>
            <% count += 1 %>
            <div class="col-sm-7 col-md-5 col-lg-4">
                <div class="card card-product" style="width: 18rem;" data-number='<%= count %>'>
                    <%= link_to image_tag("https://cdn1.sklum.com/fr/774532/pack-de-2-chaises-en-velours-glamm.jpg"), product_path(product), class:"product-image" %>
                    <div class="card-body">
                        <div>
                            <div class="d-flex justify-content-between">
                                <h5 class="card-title gold"><%= product.name.capitalize %></h5>
                                <p class="card-text price"><%= humanized_money(product.price) %> €</p>
                            </div>
                            <div class="d-flex justify-content-between mt-1">
                                <p class="card-text category"><%# product.category.capitalize %></p>
                            </div>
                            <h6 class="card-title mt-1">
                                <%= link_to product.user.name.capitalize, product_path(product), class:"button-product"%>
                            </h6>
                        </div>
                        <button class="button-heart btn-heart-index none" data-number="<%= count %>"><i id='' class='button-like far fa-heart' ></i></button>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>
