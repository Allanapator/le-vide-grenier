<div class="container mb-5">
    <h2> Products found </h2>
    <div class="row">
        <% @products.each do |product|%>
            <div class="col-sm-6 col-md-4 col-lg-4">
                <div class="card card-product" style="width: 18rem;">
                    <%= link_to image_tag("https://cdn1.sklum.com/fr/774532/pack-de-2-chaises-en-velours-glamm.jpg"), product_path(product), class:"product-image" %>
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <h5 class="card-title"><%= product.name.capitalize %></h5>
                            <button class="button-heart" ><i id="button-like" class="far fa-heart"></i></button>
                        </div>
                        <div class="d-flex justify-content-between mt-2">
                            <p class="card-text category"><%= product.category %></p>
                            <p class="card-text price"><%= product.price %>â‚¬</p>
                        </div>
                        <h6 class="card-title"><%= link_to product.user.name.capitalize, product_path(product), class:"button-product"%></h6>
                    </div>
                </div> 
            </div>
        <% end %>
    </div>
</div>