<div class="container back-height mt-4 mb-4">
    <div class="row">
        <div class="col-xs-12 col-md-12 col-lg-7 mx-auto">
            <h2 class="text-center mb-4">Votre nouvelle oeuvre</h2>
            <div class="block-form">
                <%= simple_form_for @product do |f|%>
                    <%= f.input :name, label: 'Quel est le nom de votre produit ?', required: false %>
                    <%= f.input :price_cents, label: 'Quel est son prix ?', required: false %>
                    <%= f.input :category, label: 'De quel catégorie votre produit fait-il partit ? (peinture, sculpture, etc..)', required: false %>
                    <%# f.input :tag, label: 'new_input_field_name' %>
                    <%= f.input :description, label: 'Donnez une description à votre oeuvre', required: false, input_html: { maxlength: 250, cols: 5, rows: 5 } %>
                    <%= f.input :photo, as: :file %>
                    <%= f.button :submit, "Valider mon produit", class: "btn btn-primary" %>
                <% end %>
            </div>
        </div>
    </div>
</div>