<div class="container mb-5">
    <%= link_to "Add", new_product_path(@product), class:"button-add"%>
    <div class="row">
        <% @products.each do |product|%>
            <div class="col-sm-6 col-md-4 col-lg-4">
                <div class="card card-product" style="width: 18rem;">
                    <%= link_to image_tag("https://media.artsper.com/artwork/227887_1_grid@2x.jpg?MjIyOTI2NDkxNjAxMTE5MDEx"), product_path(product), class:"product-image" %>
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <h5 class="card-title"><%= link_to product.user.name, product_path(product), class:"button-product"%></h5>
                            <button class="button-heart" ><i id="button-like" class="far fa-heart"></i></button>
                        </div>
                        <div class="d-flex justify-content-between mt-2">
                            <p class="card-text category"><%= product.category %></p>
                            <p class="card-text price"><%= product.price %>â‚¬</p>
                        </div>
                    </div>
                </div> 
            </div>
        <% end %>
    </div>
</div>

