<div class="container mt-5">
    <!-- <%= link_to "All Products", products_path(@products), class:"button-add"%> -->
    <div class="row">
        <div class="col-sm-12 col-md-8 cold-lg-8">
            <img src="https://media.artsper.com/artwork/227887_1_grid@2x.jpg?MjIyOTI2NDkxNjAxMTE5MDEx" alt=""
                class="image-show-product mb-3">
            <h4 class="name-product"><%= @product.name.split(' ').each{ |x| x.capitalize! }.join(' ') %>, <span class="year"><%= @product.created_at.year %></span></h4>
            <h5 class="name-artist gold"><%= @product.user.name.capitalize %></h5>
            <p><%= @product.category.capitalize %></p>
        </div>
        <div class="col-sm-12 col-md-4 col-lg-4 mx-auto">
            <div class="info-product">
                <p class="mb-2">PRIX</p>
                <p class="price-show gold"><%= @product.price %>â‚¬</p>
                <div class="d-flex justify-content-between">

                    <%= simple_form_for @cart_product do |f|  %>
                        <%= f.select :quantity, options_for_select([['1', 1] , ['2', 2] ,['3', 3]]) %>
                        <%= f.button :submit, 'Add to cart', class:'button-cart' %>
                    <% end %>
                    <%# button_to 'Add to cart', cart_products_path(product_id: @product), class:'button-cart' %>
                </div>
            </div>
        </div>
    </div>
</div>