        <div class="col-sm-12 col-md-8 cold-lg-8">
            <img src="https://media.artsper.com/artwork/227887_1_grid@2x.jpg?MjIyOTI2NDkxNjAxMTE5MDEx" alt="" class="image-show-product">
        </div>
        <div class="col-sm-12 col-md-4 col-lg-4 mx-auto">
            <div class="info-product">
                <h3><%= @product.user.name.capitalize %></h3>
                <h4><%= @product.name.split(' ').each{ |x| x.capitalize! }.join(' ') %>
                </h4>
                <p><%= @product.category.capitalize %></p>
                <p><%= @product.quantity %>
                    <% if @product.quantity > 1%>
                        <%= "exemplaires" %>
                    <% else %>
                        <%= "exemplaire" %>
                    <% end %>
                </p>
