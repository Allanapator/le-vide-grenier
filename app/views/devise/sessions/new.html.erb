<div class="container back-height mt-4">
  <div class="row">
    <div class="col-lg-10 col-sm-12 mx-auto">
      <div class="section">
        <h2 class="mb-0 text-center">Connectez vous</h2>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12"> 
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="d-flex justify-content-center">
          <div class="form-inputs col-sm-12 col-md-9 col-lg-6">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        label: "Email",
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        label: "Mot de passe",
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, 
                        label: "Rester connectÃ©",
                        as: :boolean if devise_mapping.rememberable? %>
          </div>
        </div>
        <div class="form-actions d-flex justify-content-center">
          <%= f.button :submit, "Se connecter", class:"btn btn-dark my-3" %>
        </div>
      <% end %>
      <div class="form-actions text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>